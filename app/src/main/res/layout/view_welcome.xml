<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rect"
    android:elevation="@dimen/d4"
    android:orientation="vertical"
    android:translationZ="@dimen/d4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/d12"
        android:layout_marginRight="@dimen/d12"
        android:layout_marginTop="@dimen/d12"
        android:orientation="vertical">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/d30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:layout_width="@dimen/d30"
                android:layout_height="@dimen/d30"
                android:src="@mipmap/warm"
                android:layout_marginRight="@dimen/d15"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prompt"
                android:textColor="@color/login"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/s16" />
        </LinearLayout>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/d3"
            android:paddingBottom="@dimen/d20"
            android:paddingLeft="@dimen/d30"
            android:paddingRight="@dimen/d30"
            android:paddingTop="@dimen/d20"
            android:text="@string/attention"
            android:textColor="@color/black" />

        <TextView
        android:id="@+id/tv_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/register"
        android:textSize="@dimen/s18"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/iv_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/login2"
        android:layout_gravity="center"
        android:padding="@dimen/d10"
        android:layout_marginBottom="@dimen/d30"
        android:layout_marginTop="@dimen/d20"/>


</LinearLayout>
</LinearLayout>