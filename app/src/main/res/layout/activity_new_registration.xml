<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <FrameLayout
        android:paddingTop="@dimen/d20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_home">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/d10"
            android:src="@mipmap/iv_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="@dimen/d60"
                android:src="@mipmap/defaulticon" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d20"
                android:text="@string/user_name"
                android:textColor="@color/white" />
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_wallet_address_generic_qr"
        android:layout_width="@dimen/d165"
        android:layout_height="@dimen/d165"
        android:layout_gravity="center_horizontal"
         />

    <TextView
        android:id="@+id/tv_copy"
        style="@style/textstyle"
        android:layout_width="@dimen/d165"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d30"
        android:background="@drawable/bg_shape_eaeaea"
        android:gravity="center"
        android:paddingBottom="@dimen/d10"
        android:paddingTop="@dimen/d10"
        android:text="@string/copy"
        android:textSize="12sp" />


</LinearLayout>